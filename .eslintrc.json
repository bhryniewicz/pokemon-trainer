{
  "parser": "@typescript-eslint/parser", // If you are using TypeScript
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:@typescript-eslint/recommended" // If you are using TypeScript
  ],
  "plugins": ["import", "simple-import-sort"],
  "rules": {
    "import/order": [
      "error",
      {
        "groups": [
          "builtin", // Node built-in modules
          "external", // External packages
          "internal", // Internal modules
          "sibling", // Sibling imports
          "parent", // Parent imports
          "index" // Index imports
        ],
        "newlines-between": "always" // Require new lines between groups
      }
    ],
    "simple-import-sort/imports": "error", // Sort imports within each group
    "simple-import-sort/exports": "error" // Sort exports
  }
}
